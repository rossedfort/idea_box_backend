<div class="container">
  <div class="createIdeaForm">
    <h5 class="center">Create a New Idea</h5>
    <%= form_tag(api_v1_ideas_path) do %>
      <%= label_tag :title %>
      <%= text_field_tag :ideaTitle %>
      <%= label_tag :body %>
      <%= text_field_tag :ideaBody %>
      <button class="btn blue" type="button" id="createIdeaButton">Save</button>
    <% end %>
  </div>
  <div class="row center">
    <div class="filter col s6 offset-s3">
      <%= label_tag :search %>
      <%= text_field_tag :filter %>
    </div>
  </div>
  <div class="ideas">
  </div>
</div>
